---
const links = [
  { href: "/", label: "Full List" },
  { href: "/pokemons/1", label: "Paginated" },
  { href: "/favorites", label: "Favourites" },
];
---

<!-- component -->
<nav class="shadow bg-gray-800">
  <div
    class="container flex items-center justify-center p-6 mx-auto capitalize text-gray-300"
  >
    {
      links.map(({href, label}) => (
        <a
          href={href}
          class="text-blue-200 dark:text-gray-200 border-b-2 border-blue-500 mx-1.5 sm:mx-6"
        >
          {label}
        </a>
      ))
    }
  </div>
</nav>
